<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.W1761094" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_550</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/gray_550</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- slide animation. -->
        <item name="android:windowAnimationStyle">@style/CustomizeActivityAnim</item>
    </style>

    <style name="CustomizeActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_slide_out</item>
    </style>
</resources>